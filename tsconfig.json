{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@@/*": [
        ".dumi/tmp/*"
      ]
    }
  },
  "include": [
    "src",
    "typings.d.ts",
    ".dumi",
    ".dumi/**/*",
    ".dumirc.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/demo",
    "src/**/__tests__"
  ]
}